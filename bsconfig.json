{
  "$schema": "https://raw.githubusercontent.com/rescript-lang/rescript-compiler/master/docs/docson/build-schema.json",
  "name": "ocamlorg",
  "namespace": true,
  "reason": { "react-jsx": 3 },
  "refmt": 3,
  "bs-dependencies": [
    "reason-react"
  ],
  "ppx-flags": [],
  "sources": [
    { "dir": "common" },
    { "dir": "bindings" },
    { "dir": "pages", "subdirs": true },
    { "dir": "res_pages", "subdirs": true },
    { "dir": "components", "subdirs": true },
    "layouts"
  ],
  "package-specs": {
    "module": "es6",
    "in-source": true
  },
  "suffix": ".js",
  "warnings": {
    "error": "+101+8"
  },
  "bsc-flags": [
    "-bs-super-errors", 
    "-bs-g"
  ]
}
